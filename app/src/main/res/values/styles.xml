<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FooBlackXL">
        <item name="android:textSize">@dimen/text_size_36</item>
        <item name="android:textColor">@color/fooBlack</item>
    </style>

    <style name="FooXL">
        <item name="android:textSize">@dimen/text_size_36</item>
    </style>

    <style name="FooLarge">
        <item name="android:textSize">@dimen/text_size_26</item>
    </style>

    <style name="FooBlackLarge">
        <item name="android:textSize">@dimen/text_size_26</item>
        <item name="android:textColor">@color/fooBlack</item>
    </style>

    <style name="FooMediumPlus">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="FooMedium">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="FooBlackMedium">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/fooBlack</item>
    </style>

    <style name="FooBlackBoldMedium">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fooBlack</item>
    </style>


    <style name="FooBlueIndentMedium">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="FooBlackBoldSmall">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fooBlack</item>
    </style>

    <style name="FooSmall">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="FooBlackSmall">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/fooBlack</item>
    </style>

    <style name="FooXS">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="FooBlueXS">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
